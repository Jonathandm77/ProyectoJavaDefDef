<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

 

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/proyecto</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <mapping class="principal.modelo.Alumno"/>
		<mapping class="principal.modelo.Profesor"/>
		<mapping class="principal.modelo.Coche"/>
		<mapping class="principal.modelo.Usuario"/>
		<mapping class="principal.modelo.Rol"/>
		<mapping class="principal.modelo.Llave"/>
		

    </session-factory>
</hibernate-configuration>